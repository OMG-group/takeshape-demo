{
  "name": "takeshape-scaffold-webpack",
  "version": "1.1.0",
  "description": "Starter Project for Takeshape",
  "author": {
    "name": "Andrew Sprouse",
    "email": "andrew@takeshape.io"
  },
  "license": "MIT",
  "homepage": "https://github.com/takeshape/takeshape-scaffold-webpack",
  "repository": {
    "type": "git",
    "url": "git://github.com/takeshape/takeshape-scaffold-webpack.git"
  },
  "bugs": {
    "url": "https://github.com/takeshape/takeshape-scaffold-webpack"
  },
  "engines": {
    "node": ">= 6.10"
  },
  "scripts": {
    "init": "tsg init",
    "serve": "browser-sync start --server build --port 5000 --files 'build/**/*' --reload-debounce",
    "build": "tsg build",
    "deploy": "tsg deploy",
    "watch:tsg": "tsg watch",
    "watch": "npm-run-all --serial build && npm-run-all --continue-on-error --parallel watch:* serve",
    "start": "npm run watch"
  },
  "devDependencies": {
    "browser-sync": "^2.15.0",
    "npm-run-all": "^3.1.0",
    "takeshape-cli": "^4.2.0"
  }
}
